<input type="hidden" id="nickname" value=@ViewBag.nickname />
<input type="hidden" id="idUser" value=@ViewBag.idUser />
<input type="hidden" id="idRoom" value=@ViewBag.idRoom />
@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        $(function () {
            var chat = $.connection.chatHub;
            $.connection.hub.start().done(function () {
                chat.server.send($('#nickname').val(), 'Ha ingresado', $('#idRoom').val());
                window.location.href ='/Home/Chat?nickname=' + $('#nickname').val() + '&idUser=' + $('#idUser').val() + '&idRoom=' + $('#idRoom').val();
            });
        });
    </script>
}